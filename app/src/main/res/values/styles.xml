<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="fontFamily">@font/aileron_semibold</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/subTitleTextColor</item>
        <item name="fontFamily">@font/aileron_regular</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/subTitleTextColor</item>
        <item name="fontFamily">@font/aileron_thin</item>
    </style>
</resources>